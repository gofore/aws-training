  <groupId>com.gofore.aws</groupId>
  <artifactId>aws-workshop</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <modules>
    <module>aws-workshop-common</module>
    <module>aws-workshop-loader</module>
    <module>aws-workshop-fetcher</module>
    <module>aws-workshop-ui</module>

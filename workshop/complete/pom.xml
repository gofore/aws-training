    <logback.version>1.1.3</logback.version>
    
    <aws.user>${env.AWS_WORKSHOP_USER}</aws.user>
    <aws.access.key>${env.AWS_ACCESS_KEY}</aws.access.key>
    <aws.secret.key>${env.AWS_SECRET_KEY}</aws.secret.key>
  </properties>
  
